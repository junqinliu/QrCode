<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardBackgroundColor="@color/cardview_light_background"
    app:cardCornerRadius="4dp">

    <LinearLayout
        style="@style/OutsideDistanceOfContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_layout"
        android:orientation="vertical">

     <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_weight="1"
           android:gravity="left"
           android:orientation="horizontal">

         <TextView

             style="@style/text_black_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
             android:text="小区1号楼门禁损坏，请找人来维修"
             android:id="@+id/messge_detail" />

     </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/manage_margin_top"
        android:orientation="horizontal">
        <TextView

            style="@style/text_black_title"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="业主A"
            android:id="@+id/name" />
        <TextView

            style="@style/text_black_title"
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_height="wrap_content"
            android:text="时间：2016/5/10"
            android:id="@+id/submit_time" />

     </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginTop="@dimen/manage_margin_top"
            android:orientation="horizontal">

            <TextView

                style="@style/text_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="业主电话： 13960152345"
                android:id="@+id/link_num" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/address_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="left"
            android:layout_marginTop="@dimen/manage_margin_top"
            android:visibility="gone"
            android:orientation="horizontal">

            <TextView

                style="@style/text_black_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="地址： "
                android:id="@+id/link_address" />

        </LinearLayout>



    </LinearLayout>



</android.support.v7.widget.CardView>