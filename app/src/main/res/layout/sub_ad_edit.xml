        android:layout_above="@+id/submit_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:orientation="horizontal">

        <!--<TextView
            style="@style/Cell_Warranty_Linear_Left"
