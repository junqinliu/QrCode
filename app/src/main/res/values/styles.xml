<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionOverflowMenuStyle">@style/AppTheme.PopupOverlay</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <item name="overlapAnchor">false</item>
        <item name="android:popupBackground">?attr/colorPrimary</item>
        <item name="android:dropDownVerticalOffset">5dip</item>
    </style>

    <!--toolbar 主题样式-->
    <style name="AppThemeToolbar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="actionMenuTextColor">#ffffff</item>
        <!--设置toolbar中menu按钮的颜色-->
        <item name="colorControlNormal">#ffffff</item>
        <!--按钮选中或者点击获得焦点后的颜色-->
        <item name="colorAccent">#ffffff</item>
        <!--Button按钮正常状态颜色-->
        <item name="colorButtonNormal">@color/accent_material_light</item>
        <!--EditText 输入框中字体的颜色-->
        <item name="editTextColor">#ffffff</item>
        <!--OverflowMenuStyle 弹出框样式-->
        <item name="actionOverflowMenuStyle">@style/OverflowMenuStyle</item>

        <!-- 溢出菜单文字颜色-->
        <item name="textAppearanceLargePopupMenu">@style/OverflowMenuTextAppearance</item>


    </style>

    <!--OverflowMenuStyle 弹出框样式-->
    <style name="OverflowMenuStyle" parent="Widget.AppCompat.Light.PopupMenu.Overflow">
        <!--false表示弹出框在toolbar的下面 true 则表示覆盖toolbar-->
        <item name="overlapAnchor">false</item>
        <item name="android:dropDownWidth">wrap_content</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:dropDownVerticalOffset">4dip</item>
        <item name="android:dropDownHorizontalOffset">0dip</item>
        <!--弹出框的背景颜色-->
        <item name="android:popupBackground">@color/colorPrimary</item>

    </style>

    <!--溢出菜单文字样式-->
    <style name="OverflowMenuTextAppearance" parent="@style/TextAppearance.AppCompat.Widget.PopupMenu.Large">
        <item name="android:textColor">#ffffff</item>
    </style>




    <!--外边距样式-->
    <style name="OutsideDistanceOfContent">
        <item name="android:paddingLeft">10dip</item>
        <item name="android:paddingRight">10dip</item>
    </style>

    <style name="text_black_title">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Send_card_invitee">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">17sp</item>
    </style>
    <style name="Send_card_time">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="Cell_Warranty_Edit">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">start</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_stroke_gray</item>
    </style>
    <style name="Cell_Warranty_Btn">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:background">@drawable/shape_stroke_radius_gray</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="Cell_Warranty_Btn_1">
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">20dp</item>
    </style>
    <style name="Cell_Warranty_Linear">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:background">@drawable/shape_stroke_gray_bottom</item>
    </style>
    <style name="Cell_Warranty_Linear_Edit">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:background">@drawable/shape_stroke_radius_gray</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">15sp</item>
    </style>
    <style name="Cell_Warranty_Linear_Left">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:textColor">@color/black_text</item>
        <item name="android:textSize">15sp</item>
    </style>


    <style name="selectPicPopupAnimation" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/popup_anim_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/popup_anim_bottom_out</item>
    </style>

    <style name="Send_card_invitee1">
        <item name="android:textColor">@color/gray_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    </resources>
